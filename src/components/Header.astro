---
import { SITE } from "@/config";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title} | ${SITE.siteTitle}` : SITE.title;
---

<header class="py-8 px-6 sm:pr-56 med:pr-64 lg:pr-72">
  <div class="max-w-4xl mx-auto">
    <a href="/" class="inline-block group">
      <div class="text-3xl med:text-4xl font-bold text-text-light dark:text-text-dark group-hover:text-accent-primary transition-colors duration-200">
        {SITE.siteTitle}
      </div>
    </a>
  </div>
</header>
