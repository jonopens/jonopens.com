---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("development", ({ data }) => !data.draft);
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"development">;
}

const { project } = Astro.props;
const { Content } = await project.render();

const ogImage = project.data.ogImage
  ? typeof project.data.ogImage === "string"
    ? project.data.ogImage
    : project.data.ogImage.src
  : undefined;
---

<BaseLayout
  title={project.data.title}
  description={project.data.description}
  ogImage={ogImage}
>
  <article class="py-8">
    <!-- Project Header -->
    <header class="mb-8 pb-8 border-b border-border-light dark:border-border-dark">
      {project.data.featured && (
        <span class="inline-block px-3 py-1 mb-4 text-xs font-semibold bg-accent-secondary text-bg-dark rounded-full">
          Featured
        </span>
      )}
      <h1 class="text-4xl med:text-5xl font-bold mb-4 text-text-light dark:text-text-dark">
        {project.data.title}
      </h1>
      <p class="text-xl text-text-secondary-light dark:text-text-secondary-dark mb-6">
        {project.data.description}
      </p>
      <div class="flex items-center gap-4 text-sm text-text-secondary-light dark:text-text-secondary-dark flex-wrap mb-4">
        <time datetime={project.data.pubDatetime.toISOString()}>
          {project.data.pubDatetime.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {project.data.modDatetime && (
          <time datetime={project.data.modDatetime.toISOString()}>
            Updated: {project.data.modDatetime.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        )}
      </div>
      {(project.data.githubUrl || project.data.demoUrl || project.data.projectUrl) && (
        <div class="flex gap-3 mb-4 flex-wrap">
          {project.data.githubUrl && (
            <a
              href={project.data.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 bg-card-muted-light dark:bg-card-muted-dark hover:bg-accent-primary hover:text-white rounded-lg transition-colors text-sm font-medium"
            >
              View on GitHub →
            </a>
          )}
          {project.data.demoUrl && (
            <a
              href={project.data.demoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 bg-accent-secondary hover:bg-accent-primary text-bg-dark rounded-lg transition-colors text-sm font-medium"
            >
              Live Demo →
            </a>
          )}
          {project.data.projectUrl && (
            <a
              href={project.data.projectUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 border border-accent-primary text-accent-primary hover:bg-accent-primary hover:text-white rounded-lg transition-colors text-sm font-medium"
            >
              Project Link →
            </a>
          )}
        </div>
      )}
      {project.data.tags && project.data.tags.length > 0 && (
        <div class="flex gap-2 flex-wrap">
          {project.data.tags.map((tag) => (
            <span class="px-3 py-1 bg-card-muted-light dark:bg-card-muted-dark rounded-full text-sm">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Project Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Back Link -->
    <div class="mt-12 pt-8 border-t border-border-light dark:border-border-dark">
      <a
        href="/development"
        class="inline-flex items-center gap-2 text-accent-secondary hover:text-accent-primary transition-colors"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Development
      </a>
    </div>
  </article>
</BaseLayout>

