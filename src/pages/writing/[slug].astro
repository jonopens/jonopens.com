---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const writing = await getCollection("writing", ({ data }) => !data.draft);
  return writing.map((piece) => ({
    params: { slug: piece.slug },
    props: { piece },
  }));
}

interface Props {
  piece: CollectionEntry<"writing">;
}

const { piece } = Astro.props;
const { Content } = await piece.render();

const ogImage = piece.data.ogImage
  ? typeof piece.data.ogImage === "string"
    ? piece.data.ogImage
    : piece.data.ogImage.src
  : undefined;
---

<BaseLayout
  title={piece.data.title}
  description={piece.data.description}
  ogImage={ogImage}
>
  <article class="py-8">
    <!-- Writing Header -->
    <header class="mb-8 pb-8 border-b border-border-light dark:border-border-dark">
      <div class="flex items-center gap-3 mb-4">
        {piece.data.featured && (
          <span class="inline-block px-3 py-1 text-xs font-semibold bg-accent-secondary text-bg-dark rounded-full">
            Featured
          </span>
        )}
        <span class="px-3 py-1 bg-accent-primary/10 text-accent-primary rounded-full text-sm font-medium">
          {piece.data.type}
        </span>
      </div>
      <h1 class="text-4xl med:text-5xl font-bold mb-4 text-text-light dark:text-text-dark">
        {piece.data.title}
      </h1>
      <p class="text-xl text-text-secondary-light dark:text-text-secondary-dark mb-6 italic">
        {piece.data.description}
      </p>
      <div class="flex items-center gap-4 text-sm text-text-secondary-light dark:text-text-secondary-dark flex-wrap">
        <time datetime={piece.data.pubDatetime.toISOString()}>
          {piece.data.pubDatetime.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {piece.data.modDatetime && (
          <time datetime={piece.data.modDatetime.toISOString()}>
            Updated: {piece.data.modDatetime.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        )}
        <span>By {piece.data.author}</span>
      </div>
      {piece.data.tags && piece.data.tags.length > 0 && (
        <div class="flex gap-2 mt-4 flex-wrap">
          {piece.data.tags.map((tag) => (
            <span class="px-3 py-1 bg-card-muted-light dark:bg-card-muted-dark rounded-full text-sm">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Writing Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Back Link -->
    <div class="mt-12 pt-8 border-t border-border-light dark:border-border-dark">
      <a
        href="/writing"
        class="inline-flex items-center gap-2 text-accent-primary hover:text-accent-secondary transition-colors"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Writing
      </a>
    </div>
  </article>
</BaseLayout>

